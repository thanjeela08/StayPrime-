<% layout("/layouts/boilerplate") %>
<h1 class="col-6 offset-3 " style="text-align:center">Log<span style="color:#b08968;">in</span></h1>
<div class="row mt-3">
        <div class="col-6 offset-3">
            
          <form method="POST" action="/login" class="needs-validation" novalidate>
             <div class="mb-3">
               <label for="username" class="form-label">Username</label>
               <input name="username"  type="text" id="username" class="form-control" required>
                
             </div> 
             
             <div class="mb-3">
               <label for="password" class="form-label">Password</label>
               <input name="password"  type="password" id="password" class="form-control" required>
            </div> 
              <button class="btn btn-success" style="background-color: #b08968;">Login</button>    
           </form>
        
        
    </div>
</div>